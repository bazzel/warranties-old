= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f|
  %legend Forgot your password?
  = f.input :email

  .form-actions
    = f.button :submit, t('helpers.submit.password.create'), :class => 'btn-primary'
    = render "links"
