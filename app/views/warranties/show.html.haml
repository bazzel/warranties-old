= render 'action_bar', :warranty => @warranty


.page-header
  %h1= @warranty.name

%p= image_tag(@warranty.photo_url(:thumb)) if @warranty.photo?
%p
  %strong= "#{Warranty.human_attribute_name("expires_on")}:"
  = l(@warranty.expires_on, :format => :default)
- if @warranty.brand_name
  %p
    %strong= "#{Warranty.human_attribute_name("brand_name")}:"
    = @warranty.brand_name
- if @warranty.purchased_on
  %p
    %strong= "#{Warranty.human_attribute_name("purchased_on")}:"
    = l(@warranty.purchased_on, :format => :default)
